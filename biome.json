{
  "$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
  "organizeImports": {
    "enabled": false
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "indentWidth": 2
  },
  "javascript": {
    "formatter": {
      "trailingCommas": "none"
    }
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "style": {
        "useTemplate": "off",
        "useNodejsImportProtocol": "off",
        "noNonNullAssertion": "off",
        "noParameterAssign": "off",
        "noUselessElse": "off",
        "noUnusedTemplateLiteral": "off",
        "useExponentiationOperator": "off",
        "useSingleVarDeclarator": "off",
        "useSelfClosingElements": "off"
      },
      "performance": {
        "noDelete": "off"
      },
      "security": {
        "noDangerouslySetInnerHtml": "off"
      },
      "suspicious": {
        "noExplicitAny": "off",
        "noAssignInExpressions": "off",
        "noImplicitAnyLet": "off",
        "noGlobalIsNan": "off",
        "noArrayIndexKey": "off"
      },
      "complexity": {
        "noForEach": "off",
        "useOptionalChain": "off",
        "useLiteralKeys": "off",
        "noUselessSwitchCase": "off"
      },
      "correctness": {
        "noUnnecessaryContinue": "off",
        "useExhaustiveDependencies": "off"
      },
      "a11y": {
        "noSvgWithoutTitle": "off",
        "useButtonType": "off",
        "noLabelWithoutControl": "off",
        "useKeyWithClickEvents": "off",
        "useKeyWithMouseEvents": "off",
        "noAutofocus": "off"
      }
    }
  },
  "files": {
    "ignore": [
      ".venv",
      "node_modules",
      "dist",
      "build",
      ".git",
      ".claude",
      "playwright-report",
      "web/dist",
      "packages/*/dist",
      "e2e/test-results",
      "bun.lock",
      "pages/public/workers",
      "**/vendor/**"
    ]
  }
}
